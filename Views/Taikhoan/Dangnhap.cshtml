
@{
    Layout = null;
}

<h4 style="color:red; text-align:center; ">@ViewBag.Thongbao</h4>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true);
    <div action="/action_page.php" style="text-align:center;margin: 5% 35% 5% 35%">
        <h2>Đăng nhập</h2>
        <div class="form-group">
            <label class="textL" for="email text">Tên tài khoản: <span class="do">*</span></label>
