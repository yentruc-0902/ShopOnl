            <div style="color:red">@ViewData["loi1"]</div>
        </div>
        <div class="form-group">
            <label class="textL" for="pwd">Mật khẩu <span class="do">*</span></label>
            <input type="password" class="form-control khungForm" id="Matkhau" name="Matkhau">
            <div style="color:red"> @ViewData["loi2"]</div>
        </div>
        <input type="submit" class="buttom" name="Đăng nhập" value="Đăng nhập" />
        <p style="margin-top:2%">Chưa có Tài Khoản ?</p>
        <input type="button" class="buttom" name="Đăng ký" value="Đăng ký" onclick="location.href='@Url.Action("Dangky", "Taikhoan")'" />
        @*<p style="margin-top:2%">Đến giỏ hàng ?</p>
